{% extends 'dashboard.html.twig' %}

{% block title %}Listar Clientes
{% endblock %}

{% block body %}
	<!-- Begin Page Content -->
	<div
		class="container-fluid">

		<!-- Page Heading -->
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">Dados do usuario</h1>
		</div>


		<div
			class="card shadow mb-4">

			<!-- Card Header - Dropdown -->
			<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
				<h6 class="m-0 font-weight-bold text-primary">Aplicações</h6>
				<div class="dropdown no-arrow">
					<a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
					</a>
					<div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
						<div class="dropdown-header">Application Settings:</div>
						<a class="dropdown-item" href="{{ path('app_adm_applications') }}">Adicionar Novo cliente</a>
					</div>
				</div>
			</div>
			<!-- Card Body -->
			<div class="card-body">
				<div class="lista">
					<table class="table table-sm table-striped table-hover table-bordered" width="100%">
						<thead class="thead-dark">
							<tr>
								<th>Cliente</th>
								<th>Situação</th>
								<th>Ação</th>
							</tr>
						</thead>
						<tbody>
							{% for cliente in clientes %}
								<tr>
									<td>{{ cliente.name }}
										{{ cliente.lastname }}</td>
									<td>{{ cliente.status }}</td>
									<td>
										<div class="dropdown">
											<div class="dropdown">
												<a class="dropdown-toggle btn btn-sm btn-outline-primary" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
													Opções
												</a>
												<div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
													<a class="dropdown-item" href="{{ path('app_adm_applications') }}">
														Adicionar Nova Aplicação
													</a>
													<a class="dropdown-item" href="{{ path('app_adm_investment_create') }}">
														Adicionar Novo Investimento
													</a>
													<a class="dropdown-item" href="{{ path('app_adm_dashboard_user_edit', {userId:cliente.id}) }}">
														Editar cliente
													</a>
													<a class="dropdown-item" href="{{ path('app_adm_investment_create') }}">
														Excluir cliente
													</a>
												</div>
											</div>
										</td>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</table>
			</div>
		</div>
	</div>

	<!-- /.container-fluid -->
{% endblock %}
