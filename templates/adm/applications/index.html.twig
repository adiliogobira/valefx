{% extends 'dashboard.html.twig' %}

{% block title %}Nova aplicação{% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Cadastrar nova aplicação</h1>
        </div>


        <div class="row">

            <div class="col-lg-12">
                <form action="{{ path('app_adm_dashboard_user_edit_update', {userId:user.id}) }}" method="post">
                    <!-- Basic Card Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Informações das aplicações</h6>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">

                                <div class="col-md-6">
                                    <select name="userId" id="userId" class="form-select-sm form-control">
                                        <option value="">Selecione um cliente</option>
                                        {% for user in users %}
                                            <option value="{{ user.id }}">{{ user.name }} {{ user.lastname }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="data_aport"
                                           placeholder="Ativos separados por vírgula">
                                </div>

                            </div>

                            <div class="row mb-2">

                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="budget" placeholder="Lucro/perda">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="percent"
                                           placeholder="Porcentagem lucro/perda">
                                </div>

                            </div>

                            <div class="row mb-2">

                                <div class="col-md-6">
                                    <select name="month" class="form-control">
                                        <option>Selecione o mês de aporte</option>
                                        <option value="1">Janeiro</option>
                                        <option value="2">Fevereiro</option>
                                        <option value="3">Março</option>
                                        <option value="4">Abril</option>
                                        <option value="5">Maio</option>
                                        <option value="6">Junho</option>
                                        <option value="7">Julho</option>
                                        <option value="8">Agosto</option>
                                        <option value="9">Setembro</option>
                                        <option value="10">Outubro</option>
                                        <option value="11">Novembro</option>
                                        <option value="12">Dezembro</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i
                                                    class="fa fa-calendar-alt"></i></span>
                                        <input type="text" class="form-control datepicker" name="data_aport"
                                               placeholder="Data o investimento">
                                    </div>

                                </div>

                            </div>

                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success text-end float-end"><i class="fa fa-save"></i> Salvar
                                alterações
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-lg-6">

                <!-- Dropdown Card Example -->


            </div>

        </div>

    </div>
    <!-- /.container-fluid -->


{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('.datepicker').datepicker({
                days: ["Domingo", "Segunda", "Terça", "Quarta", "Quinta", "Sexta", "Sábado"],
                daysShort: ["Dom", "Seg", "Ter", "Qua", "Qui", "Sex", "Sáb"],
                daysMin: ["Do", "Se", "Te", "Qu", "Qu", "Se", "Sa"],
                months: ["Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho", "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro"],
                monthsShort: ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul", "Ago", "Set", "Out", "Nov", "Dez"],
                today: "Hoje",
                monthsTitle: "Meses",
                clear: "Limpar",
                format: "dd/mm/yyyy"
            });
        });
    </script>
{% endblock %}